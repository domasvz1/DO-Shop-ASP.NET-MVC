@{
    ViewBag.Title = "Payment";
    string method;
    int cartID = -1;
    if (Model.FullOrder)
    {
        method = "PayFormedOrder";
        cartID = Model.Cart.Id;
    }
    else
    {
        method = "NotPaidOrders";
        cartID = Model.Cart.Id;
    }
}



