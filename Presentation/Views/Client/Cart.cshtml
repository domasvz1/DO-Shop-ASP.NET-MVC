@model BusinessObjects.Cart

@{
    ViewBag.Title = "Cart";
    var allTheItemsInCart = Model.ItemsInCart;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <title>Winkel - Free Bootstrap 4 Template by Colorlib</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet">
    <link rel="stylesheet" href="/Content/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="/Content/css/animate.css">
    <link rel="stylesheet" href="/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/Content/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="/Content/css/magnific-popup.css">
    <link rel="stylesheet" href="/Content/css/aos.css">
    <link rel="stylesheet" href="/Content/css/ionicons.min.css">
    <link rel="stylesheet" href="/Content/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="/Content/css/jquery.timepicker.css">
    <link rel="stylesheet" href="/Content/css/flaticon.css">
    <link rel="stylesheet" href="/Content/css/icomoon.css">
    <link rel="stylesheet" href="/Content/css/style.css">

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>


<body>

    <div class="hero-wrap hero-bread" style="background-image: url('/Content/images/bg_6.jpg');">
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <h1 class="mb-0 bread">Your Shopping cart</h1>
                </div>
            </div>
        </div>
    </div>

    <section class="ftco-section ftco-cart">
        <div class="container">
            <div class="row">
                <div class="col-md-12 ftco-animate">
                    <div class="cart-list">
                        <table class="table">
                            <thead class="thead-primary">
                                <tr class="text-center">
                                    <th>&nbsp;</th>
                                    <th>&nbsp;</th>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cartItem in allTheItemsInCart)
                                {
                                    decimal price = (cartItem.Item.Price * cartItem.Quantity) / 100.0m;
                                    decimal piecePrice = cartItem.Item.Price / 100.0m;

                                    <tr class="text-center">
                                        <td class="product-remove"><a onclick="location.href='@Url.Action("RemoveFromCart", "Client", new { cartItemId = cartItem.Id })'"><span class="ion-ios-close"></span></a></td>

                                        <td class="image-prod"><div alt="@cartItem.Item.Name" class="img" style="background-image:url(@Url.Content(cartItem.Item.ImageUrl));"></div></td>

                                        @*href="@Html.ActionLink(cartItem.Item.Name, "About_Item", "Main", new { prekesId = cartItem.Item.Id }, new { @style = "color:#00008B" })"*@

                                        <td class="product-name">
                                            <h3>@cartItem.Item.Name</h3>
                                            <p>@cartItem.Item.Headline</p>
                                        </td>

                                        <td class="price">@Html.DisplayFor(modelItem => piecePrice)</td>

                                        <td class="quantity">
                                            <div class="input-group mb-3">

                                                <button class="minus-btn" type="button" name="button" style="width:20%">
                                                    <img src="~/Content/Nuotraukos/atimti.png" alt="" style="width:50%" />
                                                </button>
                                                @Html.HiddenFor(modelItem => cartItem.Item.Id)
                                                <input type="text" name="quantityBox" class="quantityBox form-control input-number" value="@cartItem.Quantity" min="1" max="10">

                                                <button class="plus-btn" type="button" name="button" style="width:20%">
                                                    <img src="~/Content/Nuotraukos/prideti.png" alt="" style="width:50%" />
                                                </button>

                                            </div>
                                        </td>

                                        <td class="total" id="@("totalPriceOf"+@cartItem.Item.Id)"> @Html.DisplayFor(modelItem => price) $</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col col-lg-5 col-md-6 mt-5 cart-wrap ftco-animate">
                    <div class="cart-total mb-3">
                        @{
                            var totalCost = Model.CountCartsPrice(Model.ItemsInCart) / 100.0m;
                            var discount = 40.0m;
                            var totalWithDiscount = totalCost - discount;
                        }

                        <h3>Cart Totals</h3>
                        <p class="d-flex">
                            <span>Subtotal</span>
                            <span id="@("totalCartCost")">$@totalCost</span>
                        </p>
                        <p class="d-flex">
                            <span>Delivery</span>
                            <span>$20.00</span>
                        </p>
                        <p class="d-flex">
                            <span>Discount</span>
                            <span>-40$</span>
                        </p>
                        <hr>

                        <p class="d-flex total-price">
                            <span>Total</span>
                            <span id="@("totalCartCostWithDiscount")">$@totalWithDiscount</span>
                        </p>
                    </div>
                    <p class="text-center"><a href="@Url.Action("Payment", "Client")" class="btn btn-primary py-3 px-4">Proceed to Checkout</a></p>
                </div>

            </div>
        </div>
    </section>


    <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>


</body>
</html>



<script type="text/javascript">

		$(document).ready(function () {

			$('.quantityBox').on('change', function (e) {
				e.preventDefault();
				var $this = $(this);
				var $quantity = $this.closest('div').find('.quantityBox');
				var $itemId = $this.closest('div').find('#cartItem_Item_Id');
				var quantityInt = parseInt($quantity.val());
				var itemIdInt = parseInt($itemId.val());

				if (isNaN(quantityInt) || quantityInt < 1) {
					$quantity.val(1).trigger('change');
					return;
				}

				if (quantityInt > 99999) {
					$quantity.val(99999).trigger('change');
				}

				var url = '@Url.Action("ChangeItemsQuantity", "Client")';
				$.ajax({
					type: "POST",
					url: url,
					data: {
						"itemId": itemIdInt,
						"quantity": quantityInt
					},
					cache: false,
					dataType: 'html',
					success: function (response) {
						var result = JSON.parse(response);
						$("#CartBox").html(result.itemCount);
						var newItemCost = result.itemCost.toFixed(2);
						var newCartCost = result.cartCost.toFixed(2);
						$("#totalPriceOf" + itemIdInt).html(newItemCost + '$');
                        $("#totalCartCost").html(newCartCost + '$');
                        $("#totalCartCostWithDiscount").html(newCartCost + '$');
					}

				});
			});

			$('.minus-btn').on('click', function (e) {
				e.preventDefault();
				var $this = $(this);
				var $input = $this.closest('div').find('.quantityBox');
				var value = parseInt($input.val());

				if (value > 1) {
					value = value - 1;
				}
				$input.val(value).trigger('change');
			});

			$('.plus-btn').on('click', function (e) {
				e.preventDefault();
				var $this = $(this);
				var $input = $this.closest('div').find('.quantityBox');
				var value = parseInt($input.val());

				if (value < 10) {
					value = value + 1;
				}
				$input.val(value).trigger('change');
			});

		});

</script>




